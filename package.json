{
	"name": "mcgregor",
	"version": "0.1.0",
	"private": false,
	"description": "A helpful digital gardening assistant for managing digital gardens in Hugo.",
	"repository": "https://github.com/Renddslow/mcgregor",
	"license": "MIT",
	"author": "Matt McElwee <mubatt@wyopub.com>",
	"main": "dist/index.js",
	"files": ["dist"],
	"bin": {
		"mcgregor": "dist/index.js"
	},
	"scripts": {
		"start": "node dist/index.js",
		"build": "node build.js"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,css,json,md,ts,tsx}": [
			"prettier --write"
		]
	},
	"prettier": "@dmsi/prettier-config",
	"ava": {
		"babel": false,
		"compileEnhancements": false,
		"concurrency": 4,
		"extensions": [
			"ts"
		],
		"files": [
			"src/**/*.test.ts"
		],
		"require": [
			"ts-node/register"
		],
		"timeout": "1m"
	},
	"devDependencies": {
		"@dmsi/prettier-config": "^1.3.0",
		"@types/node": "^16.7.1",
		"ava": "^3.15.0",
		"esbuild": "^0.12.22",
		"husky": "^7.0.1",
		"lint-staged": "^11.1.2",
		"mri": "^1.1.6",
		"prettier": "^2.3.2",
		"ts-node": "^10.2.1",
		"typescript": "^4.3.5"
	},
	"dependencies": {
		"kleur": "^4.1.4",
		"read-pkg-up": "^7.0.1",
		"sade": "^1.7.4"
	}
}
